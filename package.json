{
  "name": "king_test",
  "version": "0.1.0",
  "description": "Test for Dev position",
  "main": "index.js",
  "scripts": {
    "start": "run-p dev:app dev:server",
    "dev:app": "webpack-dev-server --open --mode development",
    "dev:server": "node index.js",
    "build": "webpack --mode production",
    "test": "jest",
    "pretest": "path-exists dist && echo 'Start testing:' || npm run build",
    "size-limit": "npm run build && size-limit",
    "heroku-postbuild": "npm run build",
    "precommit": "lint-staged"
  },
  "author": "Albino Tonnina",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3",
    "idb-keyval": "^3.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/albinotonnina/vanilla-js-app.git"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-es2015-for-of": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^2.6.0",
    "fetch-mock": "^5.9.4",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.4",
    "lint-staged": "^7.1.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "path-exists-cli": "^1.0.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.12.1",
    "sass-loader": "^7.0.1",
    "size-limit": "^0.18.0",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "w3c-validate": "^0.0.2",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "browserslist": ["last 2 versions"],
  "size-limit": [
    {
      "limit": "50 KB",
      "path": "dist/app.bundle.js"
    }
  ],
  "lint-staged": {
    "*.{js,json,scss,md}": ["prettier --no-config --write", "git add"]
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
